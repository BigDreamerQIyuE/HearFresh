/* pages/me/collect/collect.wxss */

.head {
  display: flex;
  justify-content: space-between;
}

.newsButton {
  width: 50%;
  left: 0px;
  display: flex;
  height: 100rpx;
  justify-content: center;
  align-items: center;
  color: #e9e9e9;
  background-color: #1f1e2c;
  flex-direction: column;
}

.newsButton_text{
  font-family: SegoeUI;
  font-size: 35rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 10rpx;
}

.whiteBar{
  width: 50%;
  height: 5rpx;
  background-color: #FFF;
}

.goodsButton {
  width: 50%;
  right: 0px;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #1f1e2c;
  font-family: SegoeUI;
  font-size: 35rpx;
  font-weight: 600;
  text-align: center;
  color: #e9e9e9;
  flex-direction: column;
}

.newsCollect {
  width: 100%;
  height: 250rpx;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  margin-bottom: 10rpx;
}

.arImg {
  height: 250rpx;
  width: 250rpx;
}

.arInfo {
  height: 250rpx;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  font-size: 28rpx;
  font-family: SegoeUI;
  font-weight: bold;
  line-height: 2.03;
  letter-spacing: 0.5px;
  text-align: justify;
  color: #000;
}

.arInfo_title {
  width: 80%;
  height: 150rpx;
  text-align: justify;
  margin-top: 30rpx;
}

.arInfo_img {
  height: 35rpx;
  width: 35rpx;
}

.arInfo_timeAndReaded {
  width: 80%;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
}

.arInfo_time {
  display: flex;
  align-items: center;
}

.arInfo_readed {
  display: flex;
  align-items: center;
}

.reachBottom {
  display: flex;
  text-align: center;
  font-family: SegoeUI;
  color: grey
}
