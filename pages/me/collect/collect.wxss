/* pages/me/collect/collect.wxss */

.newsCollect {
  width: 100%;
  height: 250rpx;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  margin-bottom: 10rpx;
}

.arImg {
  height: 250rpx;
  width: 250rpx;
}

.arInfo {
  height: 250rpx;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;

  font-size: 30rpx;
  font-family: SegoeUI;
  font-weight: bold;
  line-height: 2.03;
  letter-spacing: 0.5px;
  text-align: justify;
  color: #000;
}
.arInfo_title{
  width: 80%;
  text-align: justify;
  margin-top: 30rpx;
  margin-bottom: 70rpx;
}
.arInfo_img {
  height: 35rpx;
  width: 35rpx;
}

.arInfo_timeAndReaded {
  width: 80%;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
}
.arInfo_time{
  display: flex;
  align-items: center;
}
.arInfo_readed{
  display: flex;
  align-items: center;
}
