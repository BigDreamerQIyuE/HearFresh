<!--pages/me/me.wxml-->
<view class='personalInfoView;shadow' catchtap='changePersonalInfo'>
  <view class='nicknameView'>
    <text class='nickname'>Selina Kyle</text>
    <text class='changePersonalInformation'>点击修改个人信息</text>
  </view>
  <image src='../../image/closer.jpg' class='porfilePhoto'></image>
</view>
<view class='shadow'>
  <view class='info' catchtap='address'>
    <image src='../../image/address.png' class='info_image'></image>
    <text class='info_head'>地址</text>
    <text class='info_text'>北京市朝阳区平乐园100号</text>
  </view>
  <view class='info' catchtap='coupon'>
    <image src='../../image/discount.png' class='info_image'></image>
    <text class='info_head'>代金券</text>
    <text class='info_text'>3个优惠券</text>
  </view>
  <view class='info' catchtap='collect'>
    <image src='../../image/meCollect.png' class='info_image'></image>
    <text class='info_head'>收藏</text>
    <text class='info_text'>20篇新闻/15个商品</text>
  </view>
</view>
<view class='shadow'>
  <view class='order'>
    <text class='order_head'>订单</text>
    <text class='info_text'>查看更多</text>
  </view>
  <view class='order_image_view'>
    <image src='../../image/wait_for_deliver.png' class='order_image' catchtap='waitForDeliver'></image>
    <image src='../../image/wait_for_sign.png' class='order_image' catchtap='waitForSign'></image>
    <image src='../../image/wait_for_comment.png' class='order_image' catchtap='waitForComment'></image>
    <image src='../../image/after_sale_service.png' class='order_image' mode='aspectFit' catchtap='afterSaleService'></image>
  </view>
</view>
<view class='logout;shadow' catchtap='logout'>退出登录</view>