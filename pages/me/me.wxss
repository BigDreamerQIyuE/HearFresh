/* pages/me/me.wxss */

.personalInfoView {
  width: 100%;
  height: 300rpx;
  background-color: #21202e;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-sizing: border-box;
  margin-bottom: 15rpx;
  box-shadow: #000000 0px 0px 10rpx 1rpx;
}

.nicknameView {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.nickname {
  font-family: SegoeUI;
  font-size: 50rpx;
  font-weight: bold;
  line-height: 1.64;
  letter-spacing: 0.9px;
  text-align: center;
  color: #307c92;
}

.changePersonalInformation {
  font-family: SegoeUI;
  font-size: 25rpx;
  font-weight: bold;
  line-height: 1.71;
  letter-spacing: 0.4px;
  text-align: center;
  color: #a5a5a5;
}

.porfilePhoto {
  border-radius: 85rpx;
  height: 170rpx;
  width: 170rpx;
}

.info {
  width: 100%;
  height: 100rpx;
  background-color: #21202e;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  margin-bottom: 5rpx;
  
}

.info_image {
  position: absolute;
  left: 10%;
  width: 40rpx;
  height: 40rpx;
}

.info_head {
  position: absolute;
  left: 18%;
  font-family: SegoeUI;
  font-size: 30rpx;
  font-weight: 600;
  line-height: 1.33;
  letter-spacing: normal;
  text-align: left;
  color: #fff;
}

.info_text {
  position: absolute;
  right: 10%;
  opacity: 0.51;
  font-family: SegoeUI;
  font-size: 30rpx;
  font-weight: 600;
  line-height: 1.34;
  text-align: left;
  color: #707070;
}

.order {
  margin-top: 10rpx;
  margin-bottom: 5rpx;
  width: 100%;
  height: 80rpx;
  background-color: #21202e;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.order_head {
  position: absolute;
  left: 10%;
  font-family: SegoeUI;
  font-size: 30rpx;
  font-weight: 600;
  line-height: 1.33;
  letter-spacing: normal;
  text-align: left;
  color: #fff;
}

.order_image_view {
  width: 100%;
  height: 110rpx;
  background-color: #21202e;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  margin-bottom: 15rpx;
  padding-left: 10%;
  padding-right: 10%;
  justify-content: space-between;
}

.order_image {
  height: 80rpx;
  width: 60rpx;
}

.logout {
  margin-top: 10rpx;
  margin-bottom: 5rpx;
  width: 100%;
  height: 100rpx;
  background-color: #21202e;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  justify-content: center;
  font-family: SegoeUI;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  color: #fff;
}
