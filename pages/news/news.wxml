<block wx:if="{{headLine[0].id}}">
  <view style='height:{{scrheight}}px' catchtap='tapNews' data-postid="{{headLine[0].id}}">
    <image bindtap='tapNews' src='{{headLine[0].cover}}' style='height:{{scrheight}}px' class='bc' bindload='iLoad'></image>
    <view class='front' style='top:{{headTop}}px' data-postid="{{headLine[0].id}}">{{headLine[0].title}}</view>
    <view class='frontshead' style='top:{{sheadTop}}px' data-postid="{{headLine[0].id}}">{{headLine[0].description}}</view>
    <image class='mask' src='../../image/mask.png' style='height:{{maskHeight}}px' data-postid="{{headLine[0].id}}" catchtap='tapNews'></image>
  </view>
</block>
<view>
  <block wx:if="{{article[0].id}}">
    <block wx:for="{{article}}" wx:key="this">
      <view class='blank'></view>
      <view class='article' catchtap='tapNews' data-postid='{{item.id}}'>
        <image class='arimg' mode='aspectFill' src='{{item.cover}}' data-postid='{{item.id}}'></image>
        <text class='arhead' data-postid='{{item.id}}'>{{item.title}}</text>
        <view class='timeAndReaded' catchtap='tapNews' data-postid='{{item.id}}'>
          <image src='../../image/time.png' class='artime' data-postid='{{item.id}}'></image>
          <text decode="nbsp" class='artimetext' data-postid='{{item.id}}'>&nbsp;{{item.time}}</text>
          <image src='../../image/readed.png' class='arreaded' data-postid='{{item.id}}'></image>
          <text class='arreadedtext' decode="nbsp" data-postid='{{item.id}}'>&nbsp;{{item.read}}</text>
        </view>
      </view>
    </block>
    <view class='reachBottom' wx:if="{{!reachBottom}}">----加载中----</view>
    <view class='reachBottom' wx:if="{{reachBottom}}">----没了----</view>
  </block>
</view>