<block wx:if="{{headLine[0].id}}">
  <view style='height:450rpx'>
    <image bindtap='tapNews' src='{{headLine[0].cover}}' class='bc' bindload='iLoad'></image>
    <view class='front'>{{headLine[0].title}}</view>
    <view class='frontshead'>{{headLine[0].description}}</view>
    <image class='rec' src='../../image/mask.png' style='height:450rpx' data-postid="{{headLine[0].id}}" catchtap='tapNews'></image>
  </view>
</block>
<view>
  <block wx:if="{{article[0].id}}">
    <block wx:for="{{article}}" wx:key="*this">
      <view class='blank'></view>
      <view class='article' catchtap='tapNews' data-postid='{{item.id}}'>
        <image class='arimg' src='{{item.cover}}' data-postid='{{item.id}}'></image>
        <text class='arhead' data-postid='{{item.id}}'>{{item.title}}</text>
        <image src='../../image/time.png' class='artime' data-postid='{{item.id}}'></image>
        <image src='../../image/readed.png' class='arreaded' data-postid='{{item.id}}'></image>
        <text class='artimetext' data-postid='{{item.id}}'>{{item.time}}</text>
        <text class='arreadedtext' data-postid='{{item.id}}'>{{item.read}}</text>
      </view>
    </block>
  </block>
</view>