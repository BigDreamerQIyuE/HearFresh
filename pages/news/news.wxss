/* pages/news/news.wxss */

.front {
  position: absolute;
  z-index: 2;
  font-weight: bold;
  color: #fff;
  display: flex;
  font-family: SegoeUI;
  line-height: 1.93;
  letter-spacing: 0.7px;
  text-align: left;
  left: 38rpx;
  font-size: 40rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.frontshead {
  left: 38rpx;
  position: absolute;
  z-index: 2;
  font-size: 28rpx;
  font-family: SegoeUI;
  line-height: 2.08;
  letter-spacing: 0.5px;
  text-align: left;
  color: #e6e6e6;
}

.bc {
  position: absolute;
  z-index: -1;
  width: 100%;
}

.mask {
  position: absolute;
  z-index: 1;
  width: 100%;
}

.reachBottom {
  text-align: center;
  color: #fff;
}

.newsBackground {
  width: 100%;
  height: 250rpx;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  margin-bottom: 10rpx;
}

.arImg {
  height: 250rpx;
  width: 250rpx;
}

.arInfo {
  height: 250rpx;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  font-size: 28rpx;
  font-family: SegoeUI;
  font-weight: bold;
  line-height: 2.03;
  letter-spacing: 0.5px;
  text-align: justify;
  color: #000;
}

.arInfo_title {
  height: 150rpx;
  width: 80%;
  text-align: justify;
  margin-top: 30rpx;
}

.arInfo_img {
  height: 35rpx;
  width: 35rpx;
}

.arInfo_timeAndReaded {
  width: 80%;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
}

.arInfo_time {
  display: flex;
  align-items: center;
}

.arInfo_readed {
  display: flex;
  align-items: center;
}
