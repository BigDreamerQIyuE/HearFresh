/* pages/news/newsdetail/comment/comment.wxss */

.replyInput {
  position: fixed;
  bottom: 0rpx;
  background-color: #1f1e2c;
  width: 100%;
  justify-items: right;
  z-index: 3;
}

.sendButton {
  mix-blend-mode: undefined;
  border-radius: 7px;
  box-shadow: 0 3px 6px 0 rgba(0, 0, 0, 0.16);
  font-size: 30rpx;
  float: right;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.input {
  margin: 10rpx;
  background-color: #fff;
  height: 80rpx;
  mix-blend-mode: undefined;
  border-radius: 7px;
  border: solid 1px #000;
  font-size: 30rpx;
}

.leftRightBlank {
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.bottomBlank {
  height: 5rpx;
}

.bg {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  float: top;
}

.upAndDown {
  display: flex;
  flex-direction: column;
  
}

.up {
  height: 75rpx;
  width: 75rpx;
}

.down {
  height: 75rpx;
  width: 75rpx;
}

.information {
  margin-top: 10rpx;
}

.level {
  color: #307c92;
  font-size: 25rpx;
  mix-blend-mode: undefined;
  font-family: SegoeUI;
  font-weight: 600;
  font-style: normal;
  font-stretch: normal;
  line-height: 1.33;
  letter-spacing: normal;
  text-align: left;
}

.username {
  background-color: #edeff1;
  font-size: 25rpx;
  mix-blend-mode: undefined;
  font-family: SegoeUI;
  font-weight: 600;
  font-style: normal;
  font-stretch: normal;
  line-height: 1.33;
  letter-spacing: normal;
  text-align: left;
}

.likeNumber {
  font-size: 25rpx;
  color: #818181;
  mix-blend-mode: undefined;
  font-family: SegoeUI;
  font-weight: 600;
  font-style: normal;
  font-stretch: normal;
  line-height: 1.33;
  letter-spacing: normal;
  text-align: left;
}

.date {
  font-size: 25rpx;
  word-break: break-all;
  color: #818181;
  mix-blend-mode: undefined;
  font-family: SegoeUI;
  font-weight: 600;
  font-style: normal;
  font-stretch: normal;
  line-height: 1.33;
  letter-spacing: normal;
  text-align: left;
}

.content {
  font-size: 32rpx;
  margin-top: 10rpx;
  margin-right: 65rpx;
  margin-bottom: 10rpx;
  mix-blend-mode: undefined;
  font-family: SegoeUI;
  font-weight: 600;
  font-style: normal;
  font-stretch: normal;
  line-height: 1.33;
  letter-spacing: normal;
  text-align: justify;
  color: #2a313a;
}

.replyView {
  padding-bottom: 20rpx;
  display: flex;
  align-items: center;
  align-content: center;
}

.replyImg {
  height: 30rpx;
  width: 30rpx;
}

.replyTitle {
  font-size: 30rpx;
  font-weight: bold;
  mix-blend-mode: undefined;
  font-family: SegoeUI;
  font-style: normal;
  font-stretch: normal;
  line-height: 1.34;
  letter-spacing: normal;
  text-align: left;
  color: #2a313a;
}

.rightMenu {
  height: 50rpx;
  width: 50rpx;
  position: absolute;
  right: 75rpx;
  z-index: 2;
}

.blank {
  height: 113rpx;
}

.reachBottom {
  text-align: center;
  color: #fff;
}
