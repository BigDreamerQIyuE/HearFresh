/* pages/news/detail/newsdetail.wxss */

.bc {
  z-index: -1;
  position: absolute;
  width: 100%;
  height: 450rpx;
}

.head {
  position: absolute;
  z-index: 1;
  font-weight: bold;
  color: #fff;
  display: flex;
  mix-blend-mode: undefined;
  font-family: SegoeUI;
  font-style: normal;
  font-stretch: normal;
  line-height: 1.93;
  letter-spacing: 0.7px;
  text-align: left;
  -webkit-text-stroke: 1px #707070;
}

.shead {
  position: absolute;
  z-index: 1;
  font-size: 26rpx;
  padding-right: 70rpx;
  mix-blend-mode: undefined;
  font-family: SegoeUI;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  line-height: 2.08;
  letter-spacing: 0.5px;
  text-align: left;
  color: #e6e6e6;
  -webkit-text-stroke: 1px #707070;
}

.mask {
  z-index: 0;
  width: 100%;
}

page {
  background-color: #fff;
}

.msg {
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.msg_info {
  width: 80%;
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  margin-bottom: 30rpx;
}

.info_author {
  color: black;
  font-size: 24rpx;
}

.info_time {
  color: #929292;
  font-size: 20rpx;
}

.msg_txt {
  width: 80%;
  color: #4d545b;
  font-size: 28rpx;
  line-height: 45rpx;
}

.comment {
  z-index: 2;
  position: fixed;
  height: 60rpx;
  width: 60rpx;
  bottom: 240rpx;
  right: -1rpx;
}

.collect {
  z-index: 2;
  position: fixed;
  height: 60rpx;
  width: 60rpx;
  bottom: 330rpx;
  right: -1rpx;
}

.collectBorder{
  z-index: 1;
  position: fixed;
  right: -15rpx;
  bottom: 212rpx;
  height: 200rpx;
  width: 107rpx;
}