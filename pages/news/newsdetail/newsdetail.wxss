/* pages/news/detail/newsdetail.wxss */

page {
  background-color: #fff;
}

.bc {
  z-index: -1;
  position: absolute;
  width: 100%;
  height: 450rpx;
}

.head {
  width: 84%;
  font-size: 40rpx;
  position: absolute;
  z-index: 1;
  font-family: SegoeUI;
  font-weight: bold;
  color: #fff;
  left: 8%;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.shead {
  position: absolute;
  left: 8%;
  z-index: 1;
  font-size: 28rpx;
  font-family: SegoeUI;
  line-height: 2.08;
  letter-spacing: 0.5px;
  text-align: left;
  color: #e6e6e6;
}

.mask {
  z-index: 0;
  width: 100%;
}

.msg {
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.msg_info {
  width: 84%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.info_author {
  font-size: 24rpx;
  mix-blend-mode: undefined;
  font-family: SegoeUI;
  font-weight: bold;
  font-style: normal;
  font-stretch: normal;
  line-height: 2.5;
  letter-spacing: 0.5px;
  text-align: left;
  color: #000;
}

.info_time {
  font-size: 20rpx;
  mix-blend-mode: undefined;
  font-family: SegoeUI;
  font-weight: bold;
  font-style: normal;
  font-stretch: normal;
  line-height: 2.5;
  letter-spacing: 0.5px;
  text-align: left;
  color: #808080;
}

.msg_txt {
  width: 84%;
  font-size: 28rpx;
  text-align: justify;
  font-family: SimHei;
  line-height: 1.33;
  letter-spacing: 0.6px;
  color: #2a313a;
}

.bottomTools {
  z-index: 2;
  background-color: #fff;
  width: 100%;
  height: 80rpx;
  position: fixed;
  bottom: 0px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0px 0px 2px #000;
}

.bottomToolsButton {
  width: 33%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}
.bottomToolsButton::after {
  border: none;
}

.bottomToolsImg {
  height: 40rpx;
  width: 40rpx;
  margin-right: 16rpx;
}

.bottomToolsText {
  font-size: 30rpx;
  font-weight: bold;
  letter-spacing: 7rpx;
}

.allCommentUpBlank {
  background-color: #1c1c28;
  height: 10rpx;
  width: 100%;
  margin-top: 35rpx;
}

.allComment {
  height: 50rpx;
  width: 100%;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 25rpx;
  font-weight: bold;
}
.allCommentDownBlank {
  background-color: #1c1c28;
  height: 2rpx;
  width: 100%;
}


.background {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-bottom: 2rpx;
}

.upAndDown {
  width: 10%;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.up {
  padding-top: 8rpx;
  width: 50rpx;
  height: 50rpx;
  padding-bottom: 10rpx;
}

.upOpacity {
  padding-top: 8rpx;
  width: 50rpx;
  height: 50rpx;
  padding-bottom: 10rpx;
  opacity: 0.25;
}

.down {
  width: 50rpx;
  height: 50rpx;
}

.downOpacity {
  width: 50rpx;
  height: 50rpx;
  opacity: 0.25;
}

.information {
  margin-top: 15rpx;
  width: 85%;
  display: flex;
  flex-direction: column;
  margin-bottom: 15rpx;
}

.info_head {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.level {
  color: #307c92;
  font-size: 25rpx;
  font-family: SegoeUI;
  font-weight: bold;
  text-align: left;
}

.username {
  background-color: #edeff1;
  font-size: 25rpx;
  font-family: SegoeUI;
  font-weight: bold;
  text-align: left;
  padding: 3rpx;
  border-radius: 5rpx;
}

.likeNumber {
  font-size: 25rpx;
  color: #818181;
  font-family: SegoeUI;
  font-weight: bold;
  text-align: left;
}

.date {
  font-size: 25rpx;
  color: #818181;
  font-family: SegoeUI;
  font-weight: bold;
  text-align: left;
}

.quote{
  font-size: 27rpx;
  margin-top: 15rpx;
  padding: 15rpx;
  font-weight: bold;
  line-height: 1.5;
  text-align: justify;
  background-color: #f1f1f1;
}
.quoteUsernameAll{
  display: flex;
  flex-direction: row
}
.quoteUsername{
  font-size: 25rpx;
  color: #307C92;
  margin-right: 5rpx;
}

.quoteUsernameAssist{
  margin-right: 5rpx;
    font-size: 25rpx;
  color: #2a313a;
}

.quoteContent{
  color: #929292;
    font-size: 25rpx;
}

.content {
  font-size: 29rpx;
  margin-top: 15rpx;
  margin-bottom: 18rpx;
  font-family: SegoeUI;
  font-weight: bold;
  line-height: 1.5;
  text-align: justify;
  color: #2a313a;
}

.replyView {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.reply_img_title {
  display: flex;
  align-items: center;
  justify-content: center;
}

.replyImg {
  height: 30rpx;
  width: 30rpx;
  margin-right: 5rpx;
}

.replyTitle {
  font-size: 25rpx;
  font-weight: bold;
  font-family: SegoeUI;
  text-align: left;
  color: #2a313a;
}

.replyMenu {
  height: 50rpx;
  width: 50rpx;
}

.reachBottom {
  height: 60rpx;
  text-align: center;
  color: grey;
  padding-bottom: 80rpx;
  font-size: 30rpx;
}


.replyInput {
  position: fixed;
  bottom: 0rpx;
  background-color: #1f1e2c;
  width: 100%;
  height: 350rpx;
  z-index: 3;
}
.inputBg{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%
}

.input {
  width: 100%;
  margin: 10rpx;
  padding: 15rpx;
  background-color: #fff;
  font-size: 30rpx;
  line-height: 45rpx;
  border-radius: 30rpx;
}

.inputWordCount{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.sendButton {
  border-radius: 30rpx;
  font-size: 30rpx;
  letter-spacing: 1.5px;
  width: 200rpx;
  margin-right:10rpx;
}
.inputContentLength{
  margin-left: 10rpx;
  font-size: 30rpx;
  color: #fff;
  letter-spacing: 1.5px
}
